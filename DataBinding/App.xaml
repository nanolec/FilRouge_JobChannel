<Application
    x:Class="DataBinding.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataBinding">

    <Application.Resources>

        <Style x:Key="StyleTitre" TargetType="TextBlock">
            <Setter Property="Foreground" Value="DarkGoldenrod"/>
            <Setter Property="FontFamily" Value="48"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StyleDefautText" TargetType="TextBox">
            <Setter Property="FontSize" Value="35" />
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <Style x:Key="StyleItemList" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="10,10"/>
        </Style>

        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="FontSize" Value="35" />
            <Setter Property="Background" Value="Cyan"/>
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Setter Property="BorderBrush" Value="DarkOrange"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

    </Application.Resources>


</Application>
